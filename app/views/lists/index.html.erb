<div class="container mx-auto py-10">
  <h1 class="text-4xl p-4">TODOリスト</h1>

  <%= form_with model: @list, class: "border border-solid border-gray-200 p-4" do |form| %>
    <div class="grid grid-cols-[auto_1fr] gap-x-4 gap-y-2">
      <%= form.label :title, "タイトル" %>
      <%= form.text_field :title, class: "border border-solid border-gray-400 rounded p-2", placeholder: "タイトルを入力" %>

      <%= form.label :content, "本文" %>
      <%= form.text_area :content, class: "border border-solid border-gray-400 rounded p-2", placeholder: "詳細を入力" %>

      <%= form.submit "保存", class:"col-start-2 bg-green-500 text-white font-bold hover:bg-green-600 px-4 py-1 w-full my-2 rounded cursor-pointer" %>
    </div>
    
  <% end %>

  <table class="w-full my-5">
    <thead class="bg-gray-100">
      <th class="px-6 py-3 text-left">タイトル</th>
      <th class="px-6 py-3 text-left">詳細</th>
      <th class="px-6 py-3 text-left"></th>
    </thead>
    <tbody>
      <% @lists.each do |list| %>
        <tr class="border-b border-gray-200">
          <td class="px-6 py-3 text-left"><%= list.title %></td>
          <td class="px-6 py-3 text-left"><%= list.content %></td>
          <td class="px-6 py-3 text-left">
            <%= link_to "削除", list_path(list.id), data: { turbo_method: :delete, turbo_confirm: '本当に消しますか？' }, class: "bg-red-500 text-white px-3 py-2 rounded hover:bg-red-600" %>
          </td>
      <% end %>
    </tbody>
  </table>
</div>